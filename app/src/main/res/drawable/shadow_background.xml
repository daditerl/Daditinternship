<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lapisan bayangan -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#33000000"/> <!-- Warna semi-transparent untuk shadow -->
            <corners android:radius="10dp"/> <!-- Radius sudut shadow -->
        </shape>
    </item>

    <!-- Lapisan utama -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Warna isi layout -->
            <corners android:radius="10dp"/> <!-- Radius sudut konten -->
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/>
        </shape>
    </item>
</layer-list>
